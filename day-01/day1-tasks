program1:

class HelloWorld {
    
    public static void main(String[] args) {

      //  if(// some condition) {
            //logic
       // }
       Integer attribute1 = 3;
       // And gate '&&'- all should be true - end is true
       // anyone is false -end is false
       
       // OR gate '||' - atleast one is true - end is true
       // if, if else, if else if
       
       if(attribute1 > 1){
           System.out.println("You got to destination successfully");
       } 
       else if(attribute1 > 10 ) {
           System.out.println("You were not able to reach the destination");
       } 
       else {
           System.out.println("you are running default case/else case");
       }
       
       if(attribute1 > 1){
           System.out.println("You got to destination successfully");
       } 
       
       if(attribute1 > 10 ) {
           System.out.println("You were not able to reach the destination");
       }
    }
    
}
